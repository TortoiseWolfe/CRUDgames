# ================================================
# CRUDGAMES - Next.js Funnel Conversion Template
# Environment Variables Configuration
# ================================================
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to version control

# ================================================
# Email Service Configuration
# ================================================
# Choose your preferred email provider: emailjs, web3forms, or resend
NEXT_PUBLIC_EMAIL_PROVIDER=web3forms

# Contact email where form submissions will be sent
NEXT_PUBLIC_CONTACT_EMAIL=your-email@example.com

# ----------------
# Web3Forms Configuration (Recommended - Free tier available)
# ----------------
# Get your free API key from https://web3forms.com
NEXT_PUBLIC_WEB3FORMS_ACCESS_KEY=YOUR_ACCESS_KEY_HERE

# ----------------
# EmailJS Configuration (Alternative)
# ----------------
# Get these from https://dashboard.emailjs.com
# NEXT_PUBLIC_EMAILJS_SERVICE_ID=service_xxxxxxx
# NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=template_xxxxxxx
# NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=xxxxxxxxxxxxxxx

# ----------------
# Resend Configuration (Alternative - Requires API route)
# ----------------
# Get your API key from https://resend.com/api-keys
# RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxx
# RESEND_FROM_EMAIL=onboarding@resend.dev

# ================================================
# Calendly Integration
# ================================================
# Your Calendly scheduling URL
NEXT_PUBLIC_CALENDLY_URL=https://calendly.com/your-username/30min

# ================================================
# Analytics & Tracking (Optional)
# ================================================
# Google Analytics 4
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Ads Conversion Tracking
# NEXT_PUBLIC_GOOGLE_ADS_ID=AW-XXXXXXXXX
# NEXT_PUBLIC_GOOGLE_ADS_CONVERSION_ID=XXXXXXXXX

# ================================================
# Application Settings
# ================================================
# Your company/brand name
NEXT_PUBLIC_COMPANY_NAME=CRUDgames

# Application URL (for production)
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Support email
NEXT_PUBLIC_SUPPORT_EMAIL=support@yourdomain.com

# ================================================
# Rate Limiting & Security
# ================================================
# Rate limit window in milliseconds (default: 60000 = 1 minute)
NEXT_PUBLIC_RATE_LIMIT_WINDOW=60000

# Maximum attempts per window (default: 3)
NEXT_PUBLIC_RATE_LIMIT_MAX_ATTEMPTS=3

# ================================================
# Social Media Links (Optional)
# ================================================
# NEXT_PUBLIC_TWITTER_URL=https://twitter.com/yourhandle
# NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/yourcompany
# NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/yourpage
# NEXT_PUBLIC_GITHUB_URL=https://github.com/yourusername

# ================================================
# Feature Flags (Optional)
# ================================================
# Enable/disable specific features
NEXT_PUBLIC_ENABLE_NEWSLETTER=false
NEXT_PUBLIC_ENABLE_TESTIMONIALS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ================================================
# Development Settings
# ================================================
# Enable debug mode for troubleshooting
NEXT_PUBLIC_DEBUG_MODE=false